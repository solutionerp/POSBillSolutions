<Window x:Class="RestaurantRetailPOSBill.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestaurantRetailPOSBill.WPF"
        xmlns:uc="clr-namespace:RestaurantRetailPOSBill.WPF.Views"
        mc:Ignorable="d"
        xmlns:controls="clr-namespace:RestaurantRetailPOSBill.WPF.Controls"
        Title="MainWindow" Height="450" Width="450" WindowStartupLocation="CenterScreen" WindowState="Normal">
    <Grid>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*"></ColumnDefinition>
            <ColumnDefinition Width="70*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" Background="#ECF0F1" CornerRadius="10"></Border>
        <controls:NavigationBar Grid.Column="0"  DataContext="{Binding Navigator}"></controls:NavigationBar>
        
            <!--<uc:POSLoginView></uc:POSLoginView>-->
            <ContentControl Grid.Column="1" Name="Container"  Content="{Binding Navigator.CurrentViewModel}"></ContentControl>
    </Grid>
</Window>
